<div class="results-block">
  <%= render 'layouts/messages' %>
</div>
<% if @friends %>
    <div class="card card-header results-block mb-3">
      <table class="col-md-12">
        <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%= friend.full_name %></td>
            <td><strong>Email: </strong> <%= friend.email %></td>
            <td><%= link_to "View profile", '#', class: "btn btn-success", method: :post %>
            <%= link_to 'Follow friend?', '#', class: "btn btn-success", method: :post%></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
<% end %>